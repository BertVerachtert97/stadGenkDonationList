{% extends 'base.html.twig' %}

{% block title %}Wijzig product{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            {{ form_start(productForm)}}
            <h3 class="text-center">Wijzig product: {{ product.name }} voor {{ environment.name }} met als gedoneerd: {{ product.donatedAmount }}</h3>
            <div class="row">
                <div class="col-1 fw-bold my-auto">
                    {{ form_label(productForm.name) }}
                </div>
                <div class="col-11">
                    {{ form_widget(productForm.name) }}
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-1 fw-bold">
                    {{ form_label(productForm.amount) }}
                </div>
                <div class="col-5">
                    {{ form_widget(productForm.amount) }}
                </div>
                <div class="col-2 fw-bold">
                    {{ form_label(productForm.clusterAmount) }}
                </div>
                <div class="col-4">
                    {{ form_widget(productForm.clusterAmount) }}
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-5">
                    <p class="text-danger">{{ warning }}</p>
                </div>
                <div class="col-6"></div>
            </div>
            <div class="text-center mt-3">
                {{ form_row(productForm.save) }}
            </div>
            {{ form_end(productForm) }}
        </div>
    </div>
{% endblock %}